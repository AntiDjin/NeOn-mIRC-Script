alias smilecolor { set %i 1
  set %message.smile $editbox($active)
  while (%i <= $len(%smile.color)) {
    set %message.smile %message.smile $+ $chr(3) $+ $rand(0,14) $+ $chr(44) $+ 15 $+ $mid(%smile.color,%i,1) $+  
    inc %i
  }
  editbox -a %message.smile
  unset %message.smile
  unset %i
  ; unset %smile.color
}
