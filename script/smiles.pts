    if ($did == 7) && ($did($dname,2).state) { did -ra $dname 1 Громкий смех | set %editbox $editbox($active) | set %editbox.text %editbox $+ :-):-):-) | editbox -a %editbox.text }
    if ($did == 7) && ($did($dname,3).state) { did -ra $dname 1 Громкий смех | set %smile.color :-):-):-) | smilecolor }
